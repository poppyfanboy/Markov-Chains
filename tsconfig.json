{
    "compilerOptions": {
        "target": "ESNext",
        "allowJs": true,
        "outDir": "./public/",
        "noImplicitAny": true,
        "strict": true,
        "moduleResolution": "Node",
        "sourceMap": true,
        "jsx": "react-jsx",
        "allowSyntheticDefaultImports": true,
        "baseUrl": "./src",
        "paths": {
            "@components/*": ["components/*"],
            "@model/*": ["model/*"]
        }
    },
    "include": ["./src/"]
}
